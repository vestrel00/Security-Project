package com.vestrel00.ssc.inter;

import com.badlogic.gdx.graphics.g2d.SpriteBatch;

/**
 * Application is divided into layers. Each layer draws its components on the
 * screen.
 * 
 * @author Estrellado, Vandolf
 * 
 */
public interface Layer {
	
	/**
	 * Update the variables of each component, 
	 * such as position, color, and dimensions.
	 */
	public void update();

	/**
	 * Draw the components of this layer with the given batch.
	 */
	public void draw(SpriteBatch batch);
}
