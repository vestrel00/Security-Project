package com.vestrel00.ssc.client.interf;

import java.security.InvalidKeyException;
import java.security.NoSuchAlgorithmException;

import javax.crypto.NoSuchPaddingException;

/**
 * Cryptography for the SSC protocol.
 * 
 * @author Estrellado, Vandolf
 * 
 */
public interface SSCCrypto {

	/**
	 * 
	 * @param message
	 *            to encrypt
	 * @return the encrypted message
	 * @throws NoSuchPaddingException
	 * @throws NoSuchAlgorithmException
	 * @throws InvalidKeyException 
	 */
	public byte[] encrypt(byte[] message) throws NoSuchAlgorithmException, NoSuchPaddingException, InvalidKeyException;

	/**
	 * 
	 * @param message
	 *            to decrypt
	 * @return the decrypted message
	 */
	public byte[] decrypt(byte[] message);

}
